        // --- GLOBAL VARIABLES & INIT ---
        let currentTab = 'packing';
        let pendingData = null;
        let storedPackingData = null;
        let resetTarget = null;
        
        let pck_uploadedFiles = [];
        let lbl_uploadedFiles = [];
        let lbl_calculatedExpiryDate = "";
        let lbl_calculatedBatchVal = "";
        let lbl_calcDateObj = null; 
        let lbl_isVerified = false;

        function init() {
            // Populate Employees
            const pckEmp = document.getElementById('pck-employee');
            const lblEmp = document.getElementById('lbl-employee');
            employees.forEach(e => {
                pckEmp.add(new Option(e, e));
                lblEmp.add(new Option(e, e));
            });

            // Populate Product Groups in Packing (Unique values from DB)
            const dl = document.getElementById('products-code-list');
            const uniqueGroups = [...new Set(PRODUCT_DATABASE.map(item => item.group))].sort();
            uniqueGroups.forEach(g => {
                const opt = document.createElement('option');
                opt.value = g;
                dl.appendChild(opt);
            });

            // Populate TMs in Labeling (Unique TMs from DB)
            const lblTmSel = document.getElementById('lbl-tm');
            const uniqueTMs = [...new Set(PRODUCT_DATABASE.map(item => item.tm))].sort();
            uniqueTMs.forEach(tm => lblTmSel.add(new Option(tm, tm)));

            // Set Times
            const nowTime = new Date().toLocaleTimeString('uk-UA', {hour:'2-digit', minute:'2-digit'});
            document.getElementById('pck-time').value = nowTime;
            document.getElementById('lbl-time').value = nowTime;

            // Load saved user
            const saved = localStorage.getItem('qc_user');
            if(saved) {
                pckEmp.value = saved;
                lblEmp.value = saved;
            }
            
            pckEmp.onchange = () => { localStorage.setItem('qc_user', pckEmp.value); lblEmp.value = pckEmp.value; };
            lblEmp.onchange = () => { localStorage.setItem('qc_user', lblEmp.value); pckEmp.value = lblEmp.value; };

            // --- CHECK FOR INITIAL TAB SELECTION (FROM MENU) ---
            const initialTab = localStorage.getItem('qc_initial_tab');
            if (initialTab === 'packing' || initialTab === 'labeling') {
                switchTab(initialTab);
                localStorage.removeItem('qc_initial_tab'); // Optional: Clear to prevent sticky navigation
            }
        }

        function switchTab(tab) {
            currentTab = tab;
            const packingSection = document.getElementById('section-packing');
            const labelingSection = document.getElementById('section-labeling');
            const packingBtn = document.getElementById('tab-packing');
            const labelingBtn = document.getElementById('tab-labeling');
            const trees = document.querySelectorAll('.festive-decoration');

            if (tab === 'packing') {
                packingSection.classList.remove('hidden');
                labelingSection.classList.add('hidden');
                packingBtn.classList.add('active');
                labelingBtn.classList.remove('active');
                trees.forEach(t => t.classList.remove('visible'));
            } else {
                packingSection.classList.add('hidden');
                labelingSection.classList.remove('hidden');
                packingBtn.classList.remove('active');
                labelingBtn.classList.add('active');
            }
        }

        // --- PACKING CASCADE LOGIC ---
        function updatePCK_TMs() {
            const selectedGroup = document.getElementById('pck-product-code').value;
            const tmSel = document.getElementById('pck-tm');
            
            // Clear current options
            tmSel.innerHTML = '<option value="" disabled selected>–û–±–µ—Ä—ñ—Ç—å –¢–ú...</option>';
            document.getElementById('pck-sku').innerHTML = '<option value="" disabled selected>–°–ø–æ—á–∞—Ç–∫—É –æ–±–µ—Ä—ñ—Ç—å –¢–ú...</option>';

            if (!selectedGroup) return;

            // Filter TMs that belong to this group
            const relevantTMs = [...new Set(PRODUCT_DATABASE
                .filter(item => item.group === selectedGroup)
                .map(item => item.tm))].sort();

            if (relevantTMs.length > 0) {
                relevantTMs.forEach(tm => tmSel.add(new Option(tm, tm)));
            } else {
                tmSel.innerHTML = '<option value="" disabled selected>–ù–µ–º–∞—î –¢–ú –¥–ª—è —Ü—å–æ–≥–æ –ø—Ä–æ–¥—É–∫—Ç—É</option>';
            }
        }

        function updatePCK_SKUs() {
            const selectedGroup = document.getElementById('pck-product-code').value;
            const selectedTM = document.getElementById('pck-tm').value;
            const skuSel = document.getElementById('pck-sku');

            skuSel.innerHTML = '<option value="" disabled selected>–û–±–µ—Ä—ñ—Ç—å SKU...</option>';

            if (!selectedGroup || !selectedTM) return;

            // Filter SKUs
            const relevantSKUs = PRODUCT_DATABASE
                .filter(item => item.group === selectedGroup && item.tm === selectedTM);

            if (relevantSKUs.length > 0) {
                relevantSKUs.forEach(item => {
                    skuSel.add(new Option(`${item.id} | ${item.name}`, `${item.id} | ${item.name}`));
                });
            } else {
                skuSel.innerHTML = '<option value="" disabled selected>–ù–µ–º–∞—î SKU</option>';
            }
        }

        function pck_handleFiles(input) {
            handleFilesGeneric(input, pck_uploadedFiles, 'pck-gallery', 'pck_removeFile');
        }
        
        function pck_removeFile(dataContent) {
            pck_uploadedFiles = removeFileGeneric(dataContent, pck_uploadedFiles, 'pck-gallery', 'pck_removeFile');
        }

        function getPackingData() {
            const emp = document.getElementById('pck-employee').value;
            const line = document.getElementById('pck-line').value;
            const prodCode = document.getElementById('pck-product-code').value;
            const sku = document.getElementById('pck-sku').value;
            const tm = document.getElementById('pck-tm').value;
            const batch = document.getElementById('pck-batch').value;
            const weight = document.getElementById('pck-weight').value;
            const seal = document.getElementById('pck-check-seal').value;
            const print = document.getElementById('pck-check-print').value;
            const appearance = document.getElementById('pck-check-appearance').value;
            const cap = document.getElementById('pck-check-cap').value;
            const comment = document.getElementById('pck-comment').value;

            if(!emp || !line || !prodCode || !batch || !tm || !sku || !weight) return { error: "–ó–∞–ø–æ–≤–Ω—ñ—Ç—å –≤—Å—ñ –æ—Å–Ω–æ–≤–Ω—ñ –ø–æ–ª—è —Ñ–∞—Å—É–≤–∞–Ω–Ω—è!" };
            if(!seal || !print || !appearance || !cap) return { error: "–í–∫–∞–∂—ñ—Ç—å –≤—Å—ñ –∫–æ–Ω—Ç—Ä–æ–ª—å–Ω—ñ —Ç–æ—á–∫–∏ —Ñ–∞—Å—É–≤–∞–Ω–Ω—è!" };

            let alerts = "";
            if (seal.includes('‚ùå')) alerts += "\nüî¥ –£–í–ê–ì–ê: –Ø–ö–Ü–°–¢–¨ –ü–ê–ö–£–í–ê–ù–ù–Ø –ü–û–†–£–®–ï–ù–ê";
            if (print.includes('‚ùå')) alerts += "\nüî¥ –£–í–ê–ì–ê: –ù–ï–í–Ü–î–ü–û–í–Ü–î–ù–ê –¢–ï–ú–ü–ï–†–ê–¢–£–†–ê";
            if (appearance.includes('‚ùå')) alerts += "\nüî¥ –£–í–ê–ì–ê: –ë–†–ê–ö –ó–û–í–ù–Ü–®–ù–¨–û–ì–û –í–ò–ì–õ–Ø–î–£";
            if (cap.includes('‚ùå')) alerts += "\nüî¥ –£–í–ê–ì–ê: –ù–ï–í–Ü–î–ü–û–í–Ü–î–ù–Ü–°–¢–¨ –ü–ê–ö–û–í–ê–ù–ù–Ø";

            let headerIcon = alerts ? "‚ö†Ô∏è" : "üç∂";
            const report = `${headerIcon} –ó–í–Ü–¢ QC Master: –§–∞—Å—É–≤–∞–Ω–Ω—è

üë§ –ö–æ–Ω—Ç—Ä–æ–ª–µ—Ä: ${emp}
üïí –ß–∞—Å: ${document.getElementById('pck-time').value}
üè≠ –õ—ñ–Ω—ñ—è: ${line}
üì¶ –ü—Ä–æ–¥—É–∫—Ç: ${prodCode}
üè∑Ô∏è –¢–ú: ${tm}
üìë SKU: ${sku}
üÜî –ü–∞—Ä—Ç—ñ—è: ${batch}
‚öñÔ∏è –í–∞–≥–∞ (–Ω–µ—Ç–æ): ${weight} –≥

üîç –ö–æ–Ω—Ç—Ä–æ–ª—å —è–∫–æ—Å—Ç—ñ:
   ‚Ä¢ –Ø–∫—ñ—Å—Ç—å –ø–∞–∫—É–≤–∞–Ω–Ω—è: ${seal}
   ‚Ä¢ –¢–µ–º–ø–µ—Ä–∞—Ç—É—Ä–∞: ${print}
   ‚Ä¢ –ó–æ–≤–Ω—ñ—à–Ω—ñ–π –≤–∏–≥–ª—è–¥: ${appearance}
   ‚Ä¢ –ü–∞–∫–æ–≤–∞–Ω–Ω—è (–ø–ª–∞—à–∫–∞/–∫—Ä–∏—à–∫–∞): ${cap}

üì∑ –§–æ—Ç–æ: ${pck_uploadedFiles.length} —à—Ç.
${alerts}

üí¨ –ö–æ–º–µ–Ω—Ç–∞—Ä: ${comment}`;

            return {
                data: {
                    type: "packing",
                    section: "–§–∞—Å—É–≤–∞–Ω–Ω—è",
                    time: new Date().toLocaleString('uk-UA'),
                    employee: emp, report: report,
                    line: line, productCode: prodCode, tm: tm, sku: sku, batch: batch, weight: weight,
                    seal: seal, print: print, appearance: appearance, cap: cap,
                    comment: comment,
                    files: pck_uploadedFiles,
                    photo: pck_uploadedFiles.length > 0 ? pck_uploadedFiles[0].data : ""
                },
                error: null
            };
        }

        function transferToLabeling() {
            const result = getPackingData();
            if(result.error) {
                showToast(result.error, true);
                return;
            }

            storedPackingData = result.data;

            const tm = document.getElementById('pck-tm').value;
            const sku = document.getElementById('pck-sku').value; 
            const batch = document.getElementById('pck-batch').value;
            const emp = document.getElementById('pck-employee').value;

            switchTab('labeling');

            const lblTm = document.getElementById('lbl-tm');
            lblTm.value = tm;
            document.getElementById('lbl-employee').value = emp;

            // Trigger update to populate products based on TM
            updateLBL_SKUs();

            // Find and set product
            const productId = sku.split(' | ')[0].trim(); 
            const lblProduct = document.getElementById('lbl-product');
            
            for (let i = 0; i < lblProduct.options.length; i++) {
                if (lblProduct.options[i].value.trim().startsWith(productId)) {
                    lblProduct.selectedIndex = i;
                    break;
                }
            }

            document.getElementById('lbl-batch').value = batch;
            window.scrollTo({ top: 0, behavior: 'smooth' });
            
            showToast("–î–∞–Ω—ñ —Ñ–∞—Å—É–≤–∞–Ω–Ω—è –∑–±–µ—Ä–µ–∂–µ–Ω–æ! –ü–µ—Ä–µ—Ö—ñ–¥...");
        }

        function initiatePackingSend() {
            const result = getPackingData();
            if(result.error) { showToast(result.error, true); return; }
            
            pendingData = result.data;
            storedPackingData = null; 
            openSendModal(pendingData.report);
        }

        // --- LABELING LOGIC ---
        function updateLBL_SKUs() {
            const tm = document.getElementById('lbl-tm').value;
            const prodSel = document.getElementById('lbl-product');
            prodSel.innerHTML = '<option value="">–û–±–µ—Ä—ñ—Ç—å...</option>';
            
            // Filter DB by TM
            const relevantProducts = PRODUCT_DATABASE.filter(item => item.tm === tm);
            
            if (relevantProducts.length > 0) {
                relevantProducts.forEach(p => prodSel.add(new Option(`${p.id} - ${p.name}`, `${p.id} - ${p.name}`)));
            } else {
                prodSel.innerHTML = '<option value="" disabled>–ù–µ–º–∞—î –ø—Ä–æ–¥—É–∫—Ç—ñ–≤</option>';
            }
        }

        function calculateShelfLife() {
            try {
                const tm = document.getElementById('lbl-tm').value;
                const productValue = document.getElementById('lbl-product').value;
                const mfgDateInput = document.getElementById('calc-mfg-date').value;
                const taskNum = document.getElementById('calc-task-num').value;

                if (!tm || !productValue || !mfgDateInput || !taskNum) { alert("–ó–∞–ø–æ–≤–Ω—ñ—Ç—å –≤—Å—ñ –ø–æ–ª—è –∫–∞–ª—å–∫—É–ª—è—Ç–æ—Ä–∞!"); return; }

                let shelfLifeMonths = 0;
                // Find product in DB (using partial match on ID or Name since value format is "ID - Name")
                const prodId = productValue.split(' - ')[0].trim();
                const prodObj = PRODUCT_DATABASE.find(p => p.id === prodId && p.tm === tm);

                if (prodObj && prodObj.life) shelfLifeMonths = prodObj.life;
                
                if (!shelfLifeMonths) { alert("–ù–µ –∑–Ω–∞–π–¥–µ–Ω–æ —Ç–µ—Ä–º—ñ–Ω –ø—Ä–∏–¥–∞—Ç–Ω–æ—Å—Ç—ñ!"); return; }

                const parts = mfgDateInput.split('-');
                const mfgDate = new Date(parts[0], parts[1]-1, parts[2]);
                const expiryDate = new Date(mfgDate.getFullYear(), mfgDate.getMonth() + shelfLifeMonths, mfgDate.getDate());
                if (expiryDate.getDate() !== mfgDate.getDate()) expiryDate.setDate(0); 

                const day = String(expiryDate.getDate()).padStart(2, '0');
                const month = String(expiryDate.getMonth() + 1).padStart(2, '0');
                const year = expiryDate.getFullYear();
                
                lbl_calculatedExpiryDate = `${day}.${month}.${year}`;
                lbl_calcDateObj = `${year}-${month}-${day}`;
                lbl_calculatedBatchVal = taskNum;

                document.getElementById('sl-result-date').innerText = lbl_calculatedExpiryDate;
                document.getElementById('sl-result-batch').innerText = `L ${taskNum}`;
                
                document.getElementById('shelfLifeModal').classList.remove('hidden');
                document.getElementById('shelfLifeModal').classList.add('flex');

                // Trigger animations
                document.getElementById('tree-left').classList.add('show');
                document.getElementById('tree-right').classList.add('show');
                setTimeout(() => {
                    document.getElementById('tree-left').classList.remove('show');
                    document.getElementById('tree-right').classList.remove('show');
                }, 3000);
                
                lbl_isVerified = false;
                document.getElementById('lbl-param-warning').classList.add('hidden');
                
            } catch (err) { alert("–ü–æ–º–∏–ª–∫–∞: " + err.message); }
        }

        function verifyLabelingInput() {
            if (!lbl_calcDateObj || !lbl_calculatedBatchVal) { alert("–°–ø–æ—á–∞—Ç–∫—É –≤–∏–∫–æ–Ω–∞–π—Ç–µ —Ä–æ–∑—Ä–∞—Ö—É–Ω–æ–∫!"); return; }
            const inputDate = document.getElementById('lbl-date').value;
            const inputBatch = document.getElementById('lbl-batch').value;
            
            if (!inputDate || inputDate !== lbl_calcDateObj || String(inputBatch).trim() !== String(lbl_calculatedBatchVal).trim()) {
                lbl_isVerified = false;
                document.getElementById('lbl-param-warning').classList.remove('hidden');
                document.getElementById('mismatchModal').classList.remove('hidden');
                document.getElementById('mismatchModal').classList.add('flex');
            } else {
                lbl_isVerified = true;
                document.getElementById('lbl-param-warning').classList.add('hidden');
                showToast("–î–∞–Ω—ñ –≤—ñ—Ä–Ω—ñ! ‚úÖ");
            }
        }

        function lbl_resetVerification() { 
            lbl_isVerified = false; 
            document.getElementById('lbl-param-warning').classList.add('hidden'); 
        }

        function selectToggle(btn, value) {
            const container = btn.parentElement;
            const targetId = container.dataset.target;
            const hiddenInput = document.getElementById(targetId);
            
            hiddenInput.value = value;
            
            const buttons = container.querySelectorAll('button');
            buttons.forEach(b => {
                b.classList.remove('active-ok', 'active-no');
                b.classList.add('inactive');
            });

            btn.classList.remove('inactive');
            if(value.includes('‚úÖ')) {
                btn.classList.add('active-ok');
            } else {
                btn.classList.add('active-no');
            }
        }

        function lbl_handleFiles(input) { handleFilesGeneric(input, lbl_uploadedFiles, 'lbl-gallery', 'lbl_removeFile'); }
        function lbl_removeFile(dataContent) { lbl_uploadedFiles = removeFileGeneric(dataContent, lbl_uploadedFiles, 'lbl-gallery', 'lbl_removeFile'); }

        function initiateLabelingSend() {
            if (!lbl_isVerified) { alert("–ë—É–¥—å –ª–∞—Å–∫–∞, –Ω–∞—Ç–∏—Å–Ω—ñ—Ç—å '–ü–Ü–î–¢–í–ï–†–î–ò–¢–ò' –¥–ª—è –ø–µ—Ä–µ–≤—ñ—Ä–∫–∏ –¥–∞—Ç–∏ —Ç–∞ –ø–∞—Ä—Ç—ñ—ó!"); return; }

            const emp = document.getElementById('lbl-employee').value;
            const machine = document.getElementById('lbl-machine').value;
            const tm = document.getElementById('lbl-tm').value;
            const prod = document.getElementById('lbl-product').value;
            const batch = document.getElementById('lbl-batch').value;
            
            const sanitary = document.getElementById('lbl-check-sanitary').value;
            const labelApp = document.getElementById('lbl-check-label').value;
            const packQual = document.getElementById('lbl-check-pack').value;
            const sticker = document.getElementById('lbl-check-sticker').value;
            const rowLayout = document.getElementById('lbl-check-layout').value;
            const pallet = document.getElementById('lbl-check-pallet').value;

            if(!emp || !tm || !prod || !batch) { alert("–ó–∞–ø–æ–≤–Ω—ñ—Ç—å –æ—Å–Ω–æ–≤–Ω—ñ –ø–æ–ª—è!"); return; }
            if(!sanitary || !labelApp || !packQual || !sticker || !rowLayout || !pallet) { alert("–ü—Ä–æ—Å—Ç–∞–≤—Ç–µ –≤—Å—ñ –∫–æ–Ω—Ç—Ä–æ–ª—å–Ω—ñ —Ç–æ—á–∫–∏!"); return; }

            let alerts = "";
            if(sanitary.includes('‚ùå')) alerts += "\nüî¥ –£–í–ê–ì–ê: –ë—Ä—É–¥–Ω—ñ –ø–ª—è—à–∫–∏!";
            if(labelApp.includes('‚ùå')) alerts += "\nüî¥ –£–í–ê–ì–ê: –î–µ—Ñ–µ–∫—Ç –µ—Ç–∏–∫–µ—Ç–∫–∏!";
            if(packQual.includes('‚ùå')) alerts += "\nüî¥ –£–í–ê–ì–ê: –î–µ—Ñ–µ–∫—Ç –ø–∞–∫—É–≤–∞–Ω–Ω—è!";
            if(sticker.includes('‚ùå')) alerts += "\nüî¥ –£–í–ê–ì–ê: –ü–æ–º–∏–ª–∫–∞ —Å—Ç—ñ–∫–µ—Ä–∞/–¥–∞—Ç–∏!";
            if(rowLayout.includes('‚ùå')) alerts += "\nüî¥ –£–í–ê–ì–ê: –ü–æ–º–∏–ª–∫–∞ —Ä–æ–∑–∫–ª–∞–¥–∫–∏!";
            if(pallet.includes('‚ùå')) alerts += "\nüî¥ –£–í–ê–ì–ê: –ü–æ–º–∏–ª–∫–∞ –ø–∞–ª–µ—Ç—É–≤–∞–Ω–Ω—è!";
            if (!document.getElementById('lbl-param-warning').classList.contains('hidden')) alerts += "\n‚ö†Ô∏è –ü–û–ü–ï–†–ï–î–ñ–ï–ù–ù–Ø: –†—É—á–Ω–∞ –∑–º—ñ–Ω–∞ –¥–∞—Ç–∏/–ø–∞—Ä—Ç—ñ—ó!";

            let headerIcon = alerts ? "‚ö†Ô∏è" : "üè∑Ô∏è";
            const report = `${headerIcon} –ó–í–Ü–¢ QC Master: –ï—Ç–∏–∫–µ—Ç—É–≤–∞–Ω–Ω—è

üë§ –ö–æ–Ω—Ç—Ä–æ–ª–µ—Ä: ${emp}
üïí –ß–∞—Å: ${document.getElementById('lbl-time').value}
‚öôÔ∏è –ú–∞—à–∏–Ω–∞: ${machine}
üì¶ –ü—Ä–æ–¥—É–∫—Ç: ${prod}
üÜî –ü–∞—Ä—Ç—ñ—è: ${batch}
üìÖ –î–∞—Ç–∞ –µ—Ç–∏–∫–µ—Ç–∫–∏: ${document.getElementById('lbl-date').value || '-'}

üß™ –†–æ–∑—Ä–∞—Ö—É–Ω–æ–∫:
   ‚Ä¢ –ü–∞—Ä—Ç—ñ—è: ${lbl_calculatedBatchVal ? 'L '+lbl_calculatedBatchVal : '-'}
   ‚Ä¢ –î–∞—Ç–∞: ${lbl_calculatedExpiryDate || '-'}

üìè –ü–ª—ñ–≤–∫–∞: ${document.getElementById('lbl-width').value || '-'}
üå°Ô∏è –¢–µ–º–ø–µ—Ä–∞—Ç—É—Ä–∞: ${document.getElementById('lbl-temp').value || '-'} ¬∞C

üîç –ö–æ–Ω—Ç—Ä–æ–ª—å:
   ‚Ä¢ –ß–∏—Å—Ç–æ—Ç–∞ –ø–ª—è—à–æ–∫: ${sanitary.includes('–û–ö') ? '+' : '-'}
   ‚Ä¢ –ù–∞–Ω–µ—Å–µ–Ω–Ω—è: ${labelApp.includes('‚úÖ') ? '+' : '-'}
   ‚Ä¢ –Ø–∫—ñ—Å—Ç—å –ø–∞–∫–∞: ${packQual.includes('‚úÖ') ? '+' : '-'}
   ‚Ä¢ –°—Ç—ñ–∫–µ—Ä/–î–∞—Ç–∞: ${sticker.includes('‚úÖ') ? '+' : '-'}
   ‚Ä¢ –†–æ–∑–∫–ª–∞–¥–∫–∞: ${rowLayout.includes('‚úÖ') ? '+' : '-'}
   ‚Ä¢ –ü–∞–ª–µ—Ç—É–≤–∞–Ω–Ω—è: ${pallet.includes('‚úÖ') ? '+' : '-'}

üì∑ –§–æ—Ç–æ: ${lbl_uploadedFiles.length} —à—Ç.

üí¨ –ö–æ–º–µ–Ω—Ç–∞—Ä: ${document.getElementById('lbl-comment').value}
${alerts}`;

            pendingData = {
                type: 'labeling', section: '–ï—Ç–∏–∫–µ—Ç—É–≤–∞–Ω–Ω—è',
                time: new Date().toLocaleString('uk-UA'),
                employee: emp, machine: machine, tm: tm, product: prod,
                sanitary: sanitary, labelDate: document.getElementById('lbl-date').value,
                calculatedExpiry: lbl_calculatedExpiryDate,
                calculatedBatch: lbl_calculatedBatchVal ? `L ${lbl_calculatedBatchVal}` : "",
                batch: batch, width: document.getElementById('lbl-width').value, 
                temp: document.getElementById('lbl-temp').value,
                checkLabel: labelApp, checkPack: packQual, checkSticker: sticker, checkLayout: rowLayout, checkPallet: pallet,
                comment: document.getElementById('lbl-comment').value,
                report: report, files: lbl_uploadedFiles, photo: lbl_uploadedFiles.length > 0 ? lbl_uploadedFiles[0].data : ""
            };

            let finalReport = report;
            if (storedPackingData) {
                finalReport = storedPackingData.report + "\n\n‚¨áÔ∏è‚¨áÔ∏è –ü–†–û–î–û–í–ñ–ï–ù–ù–Ø (–ï–¢–ò–ö–ï–¢–£–í–ê–ù–ù–Ø) ‚¨áÔ∏è‚¨áÔ∏è\n\n" + report;
            }

            openSendModal(finalReport);
        }

        // --- GENERIC FUNCTIONS ---
        function checkStatus(el) {
            if (el.value.includes('‚ùå')) el.classList.add('input-alert');
            else el.classList.remove('input-alert');
        }

        function handleFilesGeneric(input, fileArray, containerId, removeFuncName) {
            const files = input.files;
            if (files && files.length > 0) {
                const container = document.getElementById(containerId);
                container.classList.remove('hidden');
                Array.from(files).forEach(file => {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const base64 = e.target.result;
                        fileArray.push({ name: file.name, type: file.type, data: base64 });
                        const div = document.createElement('div');
                        div.className = 'photo-preview-item';
                        div.innerHTML = `<img src="${base64}"><div class="photo-remove-btn" onclick="${removeFuncName}('${base64}')">‚úï</div>`;
                        container.appendChild(div);
                    };
                    reader.readAsDataURL(file);
                });
            }
            input.value = '';
        }

        function removeFileGeneric(dataContent, fileArray, containerId, removeFuncName) {
            const container = document.getElementById(containerId);
            const imgs = container.querySelectorAll('img');
            imgs.forEach(img => {
                if(img.src === dataContent) img.parentElement.remove();
            });
            
            const newArray = fileArray.filter(f => f.data !== dataContent);
            if(newArray.length === 0) container.classList.add('hidden');
            return newArray;
        }

        function showToast(message, isError = false) {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            toast.className = `toast bg-white dark:bg-slate-700 border-l-4 p-4 rounded-lg shadow-xl flex items-center max-w-sm transform transition-all duration-300 translate-x-full border border-slate-200 dark:border-slate-600`;
            if (isError) {
                toast.classList.add('border-red-500', 'text-red-700', 'dark:text-red-400');
                toast.innerHTML = `<span class="mr-2 text-xl">üö´</span> <span class="font-medium text-sm">${message}</span>`;
            } else {
                toast.classList.add('border-emerald-500', 'text-emerald-700', 'dark:text-emerald-400');
                toast.innerHTML = `<span class="mr-2 text-xl">‚úÖ</span> <span class="font-medium text-sm">${message}</span>`;
            }
            container.appendChild(toast);
            requestAnimationFrame(() => { toast.classList.remove('translate-x-full'); });
            setTimeout(() => { toast.classList.add('translate-x-full'); setTimeout(() => toast.remove(), 300); }, 3000);
        }

        function openSendModal(reportText) {
            document.getElementById('reportPreview').innerText = reportText;
            document.getElementById('sendStatus').innerText = "";
            document.getElementById('sendActions').style.display = 'flex';
            document.getElementById('sendSpinner').classList.add('hidden');
            document.getElementById('sendModal').classList.remove('hidden');
            document.getElementById('sendModal').classList.add('flex');
        }

        async function executeSend() {
            const actions = document.getElementById('sendActions'); 
            const spinner = document.getElementById('sendSpinner'); 
            const status = document.getElementById('sendStatus');
            
            actions.style.display = 'none'; 
            spinner.classList.remove('hidden'); 
            status.innerText = "–í—ñ–¥–ø—Ä–∞–≤–∫–∞...";
            
            try {
                if (storedPackingData) {
                    status.innerText = "–í—ñ–¥–ø—Ä–∞–≤–∫–∞ –∑–≤—ñ—Ç—É –§–∞—Å—É–≤–∞–Ω–Ω—è...";
                    await fetch(GOOGLE_SCRIPT_URL, { 
                        method: 'POST', mode: 'no-cors', 
                        headers: { 'Content-Type': 'application/json' }, 
                        body: JSON.stringify(storedPackingData) 
                    });
                    
                    await new Promise(r => setTimeout(r, 1000));

                    status.innerText = "–í—ñ–¥–ø—Ä–∞–≤–∫–∞ –∑–≤—ñ—Ç—É –ï—Ç–∏–∫–µ—Ç—É–≤–∞–Ω–Ω—è...";
                    await fetch(GOOGLE_SCRIPT_URL, { 
                        method: 'POST', mode: 'no-cors', 
                        headers: { 'Content-Type': 'application/json' }, 
                        body: JSON.stringify(pendingData) 
                    });

                    storedPackingData = null;
                    status.innerText = "‚úÖ –í—Å—ñ –¥–∞–Ω—ñ —É—Å–ø—ñ—à–Ω–æ –∑–±–µ—Ä–µ–∂–µ–Ω–æ!"; 
                    status.classList.add('text-emerald-600');
                    
                    setTimeout(() => {
                        closeModal('sendModal');
                        performReset('packing');
                        performReset('labeling');
                    }, 2000);

                } else {
                    await fetch(GOOGLE_SCRIPT_URL, { 
                        method: 'POST', mode: 'no-cors', 
                        headers: { 'Content-Type': 'application/json' }, 
                        body: JSON.stringify(pendingData) 
                    });
                    status.innerText = "‚úÖ –î–∞–Ω—ñ –≤—ñ–¥–ø—Ä–∞–≤–ª–µ–Ω–æ!"; 
                    status.classList.add('text-emerald-600');
                    setTimeout(() => {
                        closeModal('sendModal');
                        if (pendingData.type === 'packing') performReset('packing');
                        else performReset('labeling');
                    }, 1500);
                }

            } catch(e) { 
                status.innerText = "‚ùå –ü–æ–º–∏–ª–∫–∞ –∑'—î–¥–Ω–∞–Ω–Ω—è"; 
                status.classList.add('text-red-500'); 
                actions.style.display = 'flex'; 
                spinner.classList.add('hidden'); 
            }
        }
        document.getElementById('confirmSendBtn').onclick = executeSend;

        function confirmReset(type) {
            resetTarget = type;
            document.getElementById('resetModal').classList.remove('hidden');
            document.getElementById('resetModal').classList.add('flex');
        }

        document.getElementById('confirmResetActionBtn').onclick = () => {
            performReset(resetTarget);
            closeModal('resetModal');
        };

        function performReset(type) {
            const selector = type === 'packing' ? '#section-packing' : '#section-labeling';
            const container = document.querySelector(selector);
            
            container.querySelectorAll('input, textarea').forEach(el => el.value = '');
            container.querySelectorAll('select').forEach(el => { el.value = ""; el.classList.remove('input-alert'); });
            
            if (type === 'packing') {
                container.querySelectorAll('.toggle-group button').forEach(b => {
                    b.classList.remove('active-ok', 'active-no');
                    b.classList.add('inactive');
                });
                pck_uploadedFiles = [];
                document.getElementById('pck-gallery').innerHTML = '';
                document.getElementById('pck-gallery').classList.add('hidden');
                document.getElementById('pck-time').value = new Date().toLocaleTimeString('uk-UA', {hour:'2-digit', minute:'2-digit'});
            } else {
                container.querySelectorAll('.toggle-group button').forEach(b => {
                    b.classList.remove('active-ok', 'active-no');
                    b.classList.add('inactive');
                });
                lbl_uploadedFiles = [];
                document.getElementById('lbl-gallery').innerHTML = '';
                document.getElementById('lbl-gallery').classList.add('hidden');
                document.getElementById('lbl-time').value = new Date().toLocaleTimeString('uk-UA', {hour:'2-digit', minute:'2-digit'});
                lbl_calculatedExpiryDate = ""; lbl_calculatedBatchVal = ""; lbl_calcDateObj = null; lbl_isVerified = false;
                document.getElementById('lbl-param-warning').classList.add('hidden');
            }
            if (type === 'packing' && storedPackingData) storedPackingData = null;
            
            showToast('–§–æ—Ä–º—É –æ—á–∏—â–µ–Ω–æ');
        }

        function closeModal(id) { document.getElementById(id).classList.add('hidden'); document.getElementById(id).classList.remove('flex'); }

        document.getElementById('themeToggle').addEventListener('click', () => {
            document.documentElement.classList.toggle('dark');
            localStorage.setItem('theme', document.documentElement.classList.contains('dark') ? 'dark' : 'light');
        });
        if (localStorage.getItem('theme') === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        }

        init();
    </script>
</body>
</html>
